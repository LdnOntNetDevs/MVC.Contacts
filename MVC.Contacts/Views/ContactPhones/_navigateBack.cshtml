@{
    var editMode = false;
    var redirectUrl = ViewData["redirectUrl"].ToString();
    
    if(redirectUrl.Contains("/Edit/"))
    {
        editMode = true;
    }
}
<div>
    @if (editMode)
    {
        @Html.ActionLink("Back", "Edit", "Contacts", new { id = Request["ContactId"] }, new { @class = "btn btn-primary btn-sm" })
    }
    else
    {
        @Html.ActionLink("Back", "Details", "Contacts", new { id = Request["ContactId"] }, new { @class = "btn btn-primary btn-sm" })
    }
</div>